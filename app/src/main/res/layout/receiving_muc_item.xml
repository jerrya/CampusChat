<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/mucAvatar"
        android:layout_margin="6dp"
        android:layout_gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_toRightOf="@+id/mucAvatar"
        android:layout_toEndOf="@+id/mucAvatar"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_caret_left2"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bubble_left"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/imageView1"
        android:layout_toEndOf="@+id/imageView1">

        <TextView
            style="@style/chatBubbleLeft"
            android:textSize="16sp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mucMessageReceiving" />

    </RelativeLayout>

    <TextView
        android:id="@+id/displayName"
        android:layout_below="@+id/mucAvatar"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:textSize="15sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
