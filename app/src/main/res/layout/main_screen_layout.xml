<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_screen_bg"
    android:padding="10dp">

    <ImageView
        android:id="@+id/startSreenLogo"
        android:layout_width="192dp"
        android:layout_height="192dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/wholelogo"
        android:layout_above="@+id/center_container"/>

    <TextView
        android:id="@+id/center_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <EditText
        android:id="@+id/enterNickname"
        android:layout_below="@+id/center_container"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/input_login_hint"
        android:layout_centerHorizontal="true"
        android:hint="@string/main_enter_text"
        android:layout_marginBottom="10dp" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/joinButton"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterNickname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:paddingBottom="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="20dp"
        fancy:defaultColor="@color/enter_button_bg"
        fancy:focusColor="#FFFFFF"
        fancy:iconPosition="left"
        fancy:radius="10dp"
        fancy:text="@string/main_enter"
        fancy:textColor="#FFFFFF" />

</RelativeLayout>