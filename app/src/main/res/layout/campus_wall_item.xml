<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <app.campuschat.me.Utility.SquareImageView
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:layout_gravity="bottom|start"
        android:id="@+id/image_view_grid"/>

    <TextView
        android:id="@+id/wallCommentCount"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/ic_communication_chat"
        android:drawableEnd="@drawable/ic_communication_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end" />

</FrameLayout>